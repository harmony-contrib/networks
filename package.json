{
  "name": "network-tools",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "artifacts": "turbo run artifacts",
    "clean": "rimraf 'packages/**/{lib,node_modules,dist,target,.turbo}' && rimraf node_modules",
    "clean:dist": "rimraf 'packages/*/{lib,dist,target}'",
    "init": "tsx --tsconfig ./tsconfig.json ./scripts/init-package.ts"
  },
  "devDependencies": {
    "@qinglian/tsconfig": "^0.0.2",
    "@types/node": "^18.14.0",
    "prettier": "latest",
    "rimraf": "^4.1.2",
    "tsx": "^3.12.3",
    "turbo": "^1.8.1",
    "typescript": "^4.7.4",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7.26.3"
  },
  "packageManager": "pnpm@7.26.3"
}
